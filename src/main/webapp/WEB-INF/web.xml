<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Periodika Webapp</display-name>
    <description>Milestone learning project</description>

    <servlet>
        <servlet-name>Periodika</servlet-name>
        <servlet-class>controller.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Periodika</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/execute</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
        <url-pattern>/catalog</url-pattern>
        <url-pattern>/periodical</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>view.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--<filter>-->
        <!--<filter-name>LoginRegisterFilter</filter-name>-->
        <!--<filter-class>view.filters.LoginRegisterFilter</filter-class>-->
    <!--</filter>-->

    <!--<filter-mapping>-->
        <!--<filter-name>LoginRegisterFilter</filter-name>-->
        <!--<url-pattern>/login</url-pattern>-->
        <!--<url-pattern>/register</url-pattern>-->
    <!--</filter-mapping>-->

    <welcome-file-list>
        <welcome-file>main</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error_500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/WEB-INF/jsp/error_runtime.jsp</location>
    </error-page>

    <jsp-config>
        <taglib>
            <taglib-uri>custom_tags</taglib-uri>
            <taglib-location>/WEB-INF/tld/custom_tags.tld</taglib-location>
        </taglib>
    </jsp-config>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <resource-ref>
        <res-ref-name>jdbc/webservice</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

</web-app>

